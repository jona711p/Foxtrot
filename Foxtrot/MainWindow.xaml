<Window x:Class="Foxtrot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Foxtrot"
        mc:Ignorable="d"
        Title="Foxtrot" Height="900" Width="1400">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Menu">
                    <MenuItem Header="Forside" Click="MenuItem_Menu_Frontpage_OnClick"/>
                </MenuItem>
                <MenuItem Header="Bruger">
                    <MenuItem Header="Opret" Click="MenuItem_User_Create_OnClick"/>
                    <MenuItem Header="Rediger" Click="MenuItem_User_Edit_OnClick"/>
                </MenuItem>
                <MenuItem Header="Produkter">
                    <MenuItem Header="Opret" Click="MenuItem_Product_Create_OnClick"/>
                    <MenuItem Header="Rediger" Click="MenuItem_Product_Edit_OnClick"/>
                </MenuItem>
                <MenuItem Header="Combiprodukter">
                    <MenuItem Header="Opret"/>
                    <MenuItem Header="Rediger"/>
                    <MenuItem Header="Slet"/>
                </MenuItem>
                <MenuItem Header="Events">
                    <MenuItem Header="Opret"/>
                    <MenuItem Header="Rediger"/>
                    <MenuItem Header="Slet"/>
                </MenuItem>
            </Menu>
            <Frame x:Name="MainFrame" Content="{Binding}" Height="768" Width="1366" VerticalAlignment="Top" Margin="22,3,9,0"/>
            <TextBox x:Name="textBox" Height="128" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="578" Margin="0,581,0,10" HorizontalAlignment="Center" IsReadOnly="True" TextAlignment="Center"/>
        </DockPanel>
    </Grid>
</Window>
